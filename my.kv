WindowManager:

    MainScreen:


<MainScreen>:
    name: "Main"
    reverseB: reverse
    neutralB: neutral
    driveB: drive
    current_speed:current_speed

    bms_temp_img:bms_temp
    motor_temp_img:motor_temp

    MDFloatLayout:
        size: root.width, root.height
        md_bg_color: (0,0,0,1)

        MDRoundFlatButton:
            id:reverse
            text:"R"
            user_font_size: "80sp"
            line_color:(1,1,1,1)
            text_color:(1,1,1,1)
            font_size: "40sp"
            pos_hint: {"center_x": 0.35, "center_y": 0.13}
            on_press:
                root.reverse()

        MDRoundFlatButton:
            id:neutral
            text:"N"
            user_font_size: "80sp"
            line_color:(0/255,109/255,176/255,1)
            text_color:(0/255,109/255,176/255,1)
            font_size: "40sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.13}
            on_press:
                root.neutral()

        MDRoundFlatButton:
            id:drive
            text:"D"
            user_font_size: "80sp"
            line_color:(1,1,1,1)
            text_color:(1,1,1,1)
            font_size: "40sp"
            pos_hint: {"center_x": 0.65, "center_y": 0.13}
            on_press:
                root.drive()

        Label:
            id: current_speed
            text: "50"
            color: (1,1,1,1)
            font_size: "120sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Label:
            text: "Temperatures"
            color: (1,1,1,1)
            font_size: "28sp"
            pos_hint: {"center_x": 0.13, "center_y": 0.95}

        Label:
            text: "BMS"
            color: (1,1,1,1)
            font_size: "20sp"
            pos_hint: {"center_x": 0.06, "center_y": 0.88}

        Image:
            id:bms_temp
            source:"temp_images/green.png"
            width: "10sp"
            size_hint_y: 0.05
            pos_hint: {"center_x": 0.12, "center_y": 0.88}

        Label:
            text: "Motor"
            color: (1,1,1,1)
            font_size: "20sp"
            pos_hint: {"center_x": 0.065, "center_y": 0.83}

        Image:
            id:motor_temp
            source:"temp_images/green.png"
            width: "10sp"
            size_hint_y: 0.05
            pos_hint: {"center_x": 0.13, "center_y": 0.83}

        Label:
            text: "Heat-sink"
            color: (1,1,1,1)
            font_size: "20sp"
            pos_hint: {"center_x": 0.085, "center_y": 0.78}

        Image:
            id:heat_sink_temp
            source:"temp_images/green.png"
            width: "10sp"
            size_hint_y: 0.05
            pos_hint: {"center_x": 0.163, "center_y": 0.78}





